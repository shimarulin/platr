{
  "name": "platr",
  "description": "Platr",
  "license": "MIT",
  "private": true,
  "repository": "git@github.com:shimarulin/platr.git",
  "author": "Vyacheslav Shimarulin <shimarulin@gmail.com>",
  "scripts": {
    "expose": "mkdir -p ~/.node_modules && ln -s -f \"$(pwd)\"/node_modules/* ~/.node_modules && lerna exec -- yarn link",
    "lint": "lerna run lint --parallel",
    "lint:md": "prettier --ignore-path .gitignore --parser markdown --prose-wrap always \"**/*.md\" \"!**/CHANGELOG.md\" --write"
  },
  "lint-staged": {
    "ignore": [
      "**/CHANGELOG.md"
    ],
    "linters": {
      "**/*.md": [
        "prettier --parser markdown --prose-wrap always --write",
        "git add"
      ],
      "**/*.{js,vue}": [
        "eslint --fix",
        "git add"
      ],
      "**/package.json": [
        "format-package --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index -g",
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "packages/@platr/*"
  ],
  "devDependencies": {
    "eslint": "5.16.0",
    "format-package": "4.5.0",
    "husky": "1.3.1",
    "lerna": "3.13.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.3"
  }
}
